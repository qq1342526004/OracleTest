<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/updatemsg_item_tv_attribute"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@color/item_attribute_bg"
        android:textColor="@color/item_attribute_text"/>

    <TextView
        android:id="@+id/updatemsg_item_tv_key"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@color/item_key_bg"
        android:textColor="@color/item_key_text"/>

    <EditText
        android:id="@+id/updatemsg_item_et_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:maxLines="1" />
</LinearLayout>
